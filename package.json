{
  "name": "kitledger",
  "private": true,
  "sideEffects": false,
  "type":"module",
  "version": "0.0.1",
  "description": "Framework for building fast and reliable transactional systems",
  "scripts": {
	"all:build": "npm run app:build && npm run api:build",
	"all:dev": "concurrently \"npm run api:dev\" \"npm run app:dev\"",
	"all:start": "concurrently \"npm run api:start\" \"npm run app:start\"",
    "api:build": "esbuild api/index.ts --bundle --platform=node --outdir=build/api --format=cjs --out-extension:.js=.cjs",
    "api:dev": "tsx watch api/index.ts",
    "api:start": "node ./build/api/index.cjs",
    "app:build": "remix vite:build",
    "app:dev": "remix vite:dev",
    "app:start": "remix-serve ./build/server/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "typecheck": "tsc"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "database",
    "saas",
    "platform",
    "erp",
    "dynamic",
    "forms",
    "apps"
  ],
  "author": "Alejandro Barrera Aponte",
  "license": "Apache-2.0",
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@remix-run/node": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "@remix-run/serve": "^2.12.1",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.5.9",
    "isbot": "^4.1.0",
    "postgres": "^3.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "main": "build/server/index.js",
  "devDependencies": {
    "@remix-run/dev": "^2.12.1",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^2.1.1",
    "autoprefixer": "^10.4.19",
	"concurrently": "^9.0.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.7.1",
    "typescript": "^5.6.2",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
