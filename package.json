{
	"name": "kitledger",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"version": "0.0.1",
	"description": "Framework for building fast and reliable transactional systems",
	"scripts": {
		"build": "esbuild --bundle --minify --platform=node --outdir=build src/index.ts --format=cjs --out-extension:.js=.cjs",
		"db:custom": "drizzle-kit generate --custom --config=src/services/database/drizzle.config.ts",
		"db:generate": "drizzle-kit generate --config=src/services/database/drizzle.config.ts",
		"db:migrate": "drizzle-kit migrate --config=src/services/database/drizzle.config.ts",
		"dev": "tsx watch src/index.ts",
		"format": "biome format --write",
		"start": "node ./build/server.cjs",
		"test": "vitest --run",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"typecheck": "tsc --noEmit"
	},
	"workspaces": [
		"packages/*"
	],
	"keywords": [
		"database",
		"saas",
		"platform",
		"erp",
		"dynamic",
		"forms",
		"apps"
	],
	"author": "Alejandro Barrera Aponte",
	"license": "Apache-2.0",
	"dependencies": {
		"@hono/node-server": "^1.13.7",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.24.2",
		"drizzle-orm": "^0.33.0",
		"hono": "^4.6.10",
		"jose": "^5.9.6",
		"postgres": "^3.4.4",
		"redis": "^4.7.0",
		"uuid": "^10.0.0",
		"zod": "^3.23.8"
	},
	"main": "build/server/index.js",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@faker-js/faker": "^9.0.3",
		"@types/node": "^20.11.17",
		"@types/uuid": "^10.0.0",
		"@vitest/ui": "^2.1.8",
		"esbuild": "^0.24.0",
		"tsx": "^4.7.1",
		"typescript": "^5.6.2",
		"vite-tsconfig-paths": "^5.0.1",
		"vitest": "^2.1.8"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
