{
  "name": "kitledger",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "version": "0.0.1",
  "description": "Framework for building fast and reliable transactional systems",
  "scripts": {
    "build": "esbuild --bundle --minify --platform=node --outdir=build src/server.ts --format=cjs --out-extension:.js=.cjs",
    "dev": "tsx watch src/server.ts",
    "start": "node ./build/server.cjs",
    "db:custom": "drizzle-kit generate --custom",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "database",
    "saas",
    "platform",
    "erp",
    "dynamic",
    "forms",
    "apps"
  ],
  "author": "Alejandro Barrera Aponte",
  "license": "Apache-2.0",
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.5.9",
    "postgres": "^3.4.4",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "main": "build/server/index.js",
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^2.1.1",
	"esbuild": "^0.24.0",
    "tsx": "^4.7.1",
    "typescript": "^5.6.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
