{
  "name": "kitledger",
  "version": "0.0.1",
  "description": "Dynamic database platform form Business Management",
  "scripts": {
    "build": "esbuild src/server/index.ts --bundle --minify --platform=node --outdir=./dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "dev": "tsx watch src/server/index.ts",
    "start": "node ./dist/index.js",
    "test": "vitest --run",
	"test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "typecheck": "tsc"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "database",
    "saas",
    "platform",
    "erp",
    "dynamic",
    "forms",
    "apps"
  ],
  "author": "Alejandro Barrera Aponte",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "esbuild": "^0.23.1",
    "hono": "^4.5.9",
    "postgres": "^3.4.4",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "main": "server.js",
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^2.1.1",
    "tsx": "^4.7.1",
    "typescript": "^5.6.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  }
}
