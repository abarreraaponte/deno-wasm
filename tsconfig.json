{
	"compilerOptions": {
		"lib": ["ES2023"],
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./src/*"],
			"@server/*": ["./src/server/*"],
			"@client/*": ["./src/client/*"],
		},
		"outDir": "./dist",
		"types": [
			"node"
		],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
	}
}